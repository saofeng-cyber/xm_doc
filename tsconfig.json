{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "verbatimModuleSyntax": true,
    "lib": ["esnext", "dom", "dom.iterable"],
    "allowJs": true,
    "baseUrl": "."
  },
  "include": ["docs/.vitepress/theme/*"]
}
